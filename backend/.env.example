# Server Configuration
PORT=3005
NODE_ENV=development

# Google AI (Required)
GOOGLE_API_KEY=your_google_api_key_here

# Pinecone Vector Database (Required)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=ytchatbot
PINECONE_ENVIRONMENT=us-east-1

# PostgreSQL Database (Neon or local)
# For Neon: postgresql://user:password@host/database?sslmode=require
# For local Docker: postgresql://ytchatbot:ytchatbot_password@localhost:5432/ytchatbot
DATABASE_URL=your_database_url_here
